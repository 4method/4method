---
export interface Props {
  title: string;
  description: string;
  borderColor?: "light-blue" | "petroleum";
  className?: string;
}

const {
  title,
  description,
  borderColor = "light-blue",
  className = "",
} = Astro.props;

const borderClasses = {
  "light-blue": "border-light-blue",
  petroleum: "border-petroleum",
};
---

<div class={`border-l-4 ${borderClasses[borderColor]} pl-6 ${className}`}>
  <h3 class="text-xl font-semibold text-petroleum mb-3">{title}</h3>
  <p class="text-gray-600">{description}</p>
</div>
