---
export interface Props {
  icon: string;
  size?: "sm" | "md" | "lg";
  shape?: "circle" | "square";
  className?: string;
}

const { icon, size = "md", shape = "circle", className = "" } = Astro.props;

const sizeClasses = {
  sm: "w-8 h-8 text-sm",
  md: "w-16 h-16 text-2xl",
  lg: "w-24 h-24 text-4xl",
};

const shapeClasses = {
  circle: "rounded-full",
  square: "rounded-lg",
};

const classes = `gradient-bg flex items-center justify-center ${sizeClasses[size]} ${shapeClasses[shape]} ${className}`;
---

<div class={classes}>
  <span class="text-white">{icon}</span>
</div>
